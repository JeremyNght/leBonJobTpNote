{% extends 'base.html.twig' %}

{% block title %}Hello OfferController!{% endblock %}

{% block body %}
{#    List offers#}
    <div class="example-wrapper">
        <h1>Offers</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Created At</th>
                <th>Department</th>
                <th>Description</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Company</th>
                <th>Contact Email</th>
                <th>Reference
                <th>Latitude</th>
                <th>Longitude</th>
            </tr>
            </thead>
            <tbody>
            {% for offer in offers %}
                <tr>
                    <td>{{ offer.id }}</td>
                    <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ offer.department }}</td>
                    <td>{{ offer.description }}</td>
                    <td>{{ offer.zipCode }}</td>
                    <td>{{ offer.city }}</td>
                    <td>{{ offer.company }}</td>
                    <td>{{ offer.contactEmail }}</td>
                    <td>{{ offer.reference }}</td>
                    <td>{{ offer.latitude }}</td>
                    <td>{{ offer.longitude }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
